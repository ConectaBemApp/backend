{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "ConectaBem Back-end APIs",
    "description": "APIs para o projeto ConectaBem"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "Endpoints relacionados aos usuários"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Teste"
        ],
        "summary": "Teste da rota",
        "description": "Este endpoint é um teste para verificar se a API está funcionando corretamente",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Retorna informações do usuário",
        "description": "Retorna informações do usuário",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Solicitação Inválida"
          },
          "401": {
            "description": "Não autorizado"
          },
          "404": {
            "description": "Não Encontrado"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Realiza o cadastro do usuário",
        "description": "Realiza o cadastro do usuário",
        "responses": {
          "201": {
            "description": "Criado"
          },
          "422": {
            "description": ""
          },
          "500": {
            "description": "Erro Interno do Servidor"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "any"
                  },
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  },
                  "confirmPassword": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Realiza o login do usuário",
        "description": "Realiza o login do usuário",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Não Encontrado"
          },
          "422": {
            "description": ""
          },
          "500": {
            "description": "Erro Interno do Servidor"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}