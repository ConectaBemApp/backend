{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "ConectaBem APIs",
    "description": "APIs para o projeto ConectaBem"
  },
  "host": "localhost:3000",
  "servers": [
    {
      "url": [
        "http://localhost:3000",
        "https://conectabemback.onrender.com"
      ]
    }
  ],
  "basePath": "/",
  "tags": [
    {
      "name": "User",
      "description": "Endpoints relacionados aos usuários"
    },
    {
      "name": "Test",
      "description": "Endpoints de teste"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth/checkUserSendOTP": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Envia o código OTP para o e-mail enviado pelo body",
        "description": "Envia o código OTP para registro/login da conta no e-mail enviado no body",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário já existente, código OTP enviado por e-mail"
          },
          "201": {
            "description": "Usuário criado com sucesso e código OTP enviado por e-mail"
          },
          "422": {
            "description": "Parâmetros exigidos não estão sendo enviados no body"
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/auth/checkOTP": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Checa se OTPs coincidem",
        "description": "Checa se o OTP enviado no body é o mesmo OTP encriptado no backend.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "any"
                },
                "OTP": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Còdigos OTP coincidem"
          },
          "401": {
            "description": "Códigos OTP não coincidem"
          },
          "422": {
            "description": "Parâmetros exigidos não estão sendo enviados no body"
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Test"
        ],
        "summary": "Teste para verificar se API está funcionando",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}